#!/bin/bash
errorExit() {
    echo "*** $*" 1>&2
    exit 1
}

if ip addr | grep -q $VIRTUAL_IP ; then
  curl {{ (ha.vip | ip == 4) | ternary('--ipv4', '--ipv6') }} -s --max-time 2 --insecure https://{{ ha.vip | ip_format }}:8443/healthz  -o /dev/null || errorExit "Error GET https://{{ ha.vip | ip_format }}:8443/healthz"
fi