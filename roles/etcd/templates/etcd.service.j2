{%- set etcdnode=[] -%}
{%- if groups['etcd'] is not defined %}
    {%- for host in groups['master'] -%}
        {{ etcdnode.append(host) }}
    {%- endfor%}
{%- else%}
    {%- for host in groups['etcd'] -%}
        {{ etcdnode.append(host) }}
    {%- endfor%}
{%- endif %}
[Unit]
Description=etcd
Documentation=https://github.com/coreos/etcd
Conflicts=etcd.service
Conflicts=etcd2.service

[Service]
Type=notify
Restart=always
RestartSec=5s
LimitNOFILE=40000
TimeoutStartSec=0
ExecStart=/usr/local/bin/etcd --name {{ ansible_fqdn | lower }} \
  --data-dir {{ kubernetes.etcd.datadir }} \
  --listen-client-urls https://{{ ansible_default_ipv4.address }}:2379 \
  --advertise-client-urls https://{{ ansible_default_ipv4.address }}:2379 \
  --listen-peer-urls https://{{ ansible_default_ipv4.address }}:2380 \
  --initial-advertise-peer-urls https://{{ ansible_default_ipv4.address }}:2380 \
  --initial-cluster {% for host in etcdnode %}{{ hostvars[host].ansible_fqdn | lower }}=https://{{ host }}:2380{% if not loop.last %},{% endif %}{% endfor %} \
  --initial-cluster-token {{ kubernetes.etcd.initialclustertoken }} \
  --initial-cluster-state {{ kubernetes.etcd.initialclusterstate }} \
  --auto-compaction-retention {{ kubernetes.etcd.autocompactionretention }} \
  --client-cert-auth \
  --trusted-ca-file {{ kubernetes.ssl.location }}/etcd/ca.crt \
  --cert-file {{ kubernetes.ssl.location }}/etcd/server.crt \
  --key-file {{ kubernetes.ssl.location }}/etcd/server.key \
  --peer-client-cert-auth \
  --peer-trusted-ca-file {{ kubernetes.ssl.location }}/etcd/ca.crt \
  --peer-cert-file {{ kubernetes.ssl.location }}/etcd/peer.crt \
  --peer-key-file {{ kubernetes.ssl.location }}/etcd/peer.key {% if kubernetes.etcd.debug %} --debug {% endif %} {% if kubernetes.etcd.enablepprof %} --enable-pprof {% endif %}


[Install]
WantedBy=multi-user.target